{
  "name": "coronate",
  "version": "0.1.0",
  "description": "A chess tournament manager",
  "author": "John Jackson",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "homepage": ".",
  "main": "public/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnridesabike/coronate.git"
  },
  "scripts": {
    "build": "react-scripts build",
    "build:electron-all": "npm run build && electron-builder build -mw",
    "build:electron-win": "npm run build && electron-builder build -w",
    "deploy:github-pages": "npm run build && gh-pages -d build",
    "eject": "react-scripts eject",
    "lint:javascript": "eslint --ext .jsx,.js src/",
    "lint:stylesheets": "stylelint \"src/**/*.css\"",
    "lint:all": "npm run lint:javascript && npm run lint:stylesheets",
    "postinstall": "electron-builder install-app-deps",
    "sourcemaps": "source-map-explorer './build/static/js/*'",
    "start": "react-scripts start",
    "start:electron": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "start:electron-win": "concurrently \"set BROWSER=none&&npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "test": "react-scripts test --transformIgnorePatterns 'node_modules/(?!(bs-platform)/).+\\.js$'",
    "test:coverage": "npm run test -- --coverage",
    "re:build": "bsb -make-world -clean-world",
    "re:watch": "bsb -make-world -clean-world -w",
    "re:test": "jest /lib/js/__tests__ --watch"
  },
  "dependencies": {
    "@reach/dialog": "^0.2.9",
    "@reach/tabs": "^0.1.6",
    "@reach/visually-hidden": "^0.1.4",
    "bs-webapi": "^0.15.2",
    "edmonds-blossom": "^1.0.0",
    "electron-is-dev": "^1.1.0",
    "elo-rank": "^1.0.3",
    "localforage": "^1.7.3",
    "localforage-getitems": "^1.4.2",
    "localforage-removeitems": "^1.4.0",
    "localforage-setitems": "^1.4.0",
    "nanoid": "^2.0.3",
    "numeral": "^2.0.6",
    "photon-colors": "^3.3.2",
    "ramda": "^0.26.1",
    "re-classnames": "^4.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-feather": "^2.0.3",
    "reason-react": "^0.7.0",
    "simple-icons": "^1.10.0",
    "typeface-fira-sans": "0.0.54"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.8",
    "@testing-library/react": "^8.0.5",
    "bs-dom-testing-library": "^0.4.1",
    "bs-platform": "^6.0.3",
    "bs-react-testing-library": "^0.5.0",
    "concurrently": "^4.1.1",
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15",
    "electron-devtools-installer": "^2.2.4",
    "eslint-plugin-react": "^7.14.2",
    "gh-pages": "^2.0.1",
    "@testing-library/jest-dom": "^4.0.0",
    "react-scripts": "3.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-css-modules": "^1.4.0",
    "stylelint-config-standard": "^18.3.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "appId": "bike.johnridesa.coronate",
    "productName": "Coronate",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "compression": "normal"
    },
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      "LICENSE"
    ]
  }
}
