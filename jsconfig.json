{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": { "*": ["types/*"] },
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "noEmit": true,
        "jsx": "preserve"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}